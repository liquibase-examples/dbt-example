# Snowflake Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to git - they contain sensitive information

# Your Snowflake account identifier (format: account.region.cloud)
# Example: mycompany.us-east-1.aws
SNOWFLAKE_ACCOUNT=your-account.region.cloud

# Password for LIQUIBASE_USER (created by scripts/snowflake_setup.sql)
LIQUIBASE_PASSWORD=your_liquibase_password

# Password for DBT_USER (created by scripts/snowflake_setup.sql)
DBT_PASSWORD=your_dbt_password

# Password for DATABASE_ADMIN_USER (created by scripts/database-admin-setup.sql)
DATABASE_ADMIN_PASSWORD=your_database_admin_password

# Database selection (choose which database to work with)
# SNOWFLAKE_DATABASE=ONLINE_STORE_DB    # Original database
# SNOWFLAKE_DATABASE=ONLINE_STORE_DEV   # Development clone (recommended for daily work)
SNOWFLAKE_DATABASE=ONLINE_STORE_DEV

# Optional: Override default warehouse
# SNOWFLAKE_WAREHOUSE=COMPUTE_WH